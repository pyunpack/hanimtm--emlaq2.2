<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="number_day_reservation_form" model="ir.ui.view">
            <field name="name">number.days.reservation.form</field>
            <field name="model">number.days.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservation Days">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="nb_days"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_number_day_reservation_tree" model="ir.ui.view">
            <field name="name">number.days.reservation.tree</field>
            <field name="model">number.days.reservation</field>
            <field name="arch" type="xml">
                <tree string="Reservation Days" editable="bottom">
                    <field name="name"/>
                    <field name="nb_days"/>
                </tree>
            </field>
        </record>


        <record id="action_number_day_reservation_tree" model="ir.actions.act_window">
            <field name="name">Reservation Days</field>
            <field name="res_model">number.days.reservation</field>
            <field name="view_id" ref="view_number_day_reservation_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Reservation Days
                </p>
                <p>
                    New Reservation Days.
                </p>
            </field>
        </record>


        <menuitem name="Reservation Days" id="menu_number_day_reservation" parent="sale.menu_sale_config"
                  action="action_number_day_reservation_tree" sequence="99"/>
    </data>



